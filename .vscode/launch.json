    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug epub_transliterator",
            "program": "${workspaceFolder}/target/debug/epub_transliterator",
            "args": [
                "--path-to-epub",
                "/workspaces/epub_transliterator/epubs/norse_mythology.epub",
                "--path-to-dict",
                "/workspaces/epub_transliterator/dicts/elder_futhark.yaml"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}